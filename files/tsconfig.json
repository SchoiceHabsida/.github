{
  "compilerOptions": {
    "target": "E2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "lib": ["esnext"]
}
